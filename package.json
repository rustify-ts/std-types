{
  "name": "@rustify/std-types",
  "version": "0.0.0",
  "description": "TypeScript standard types inspired by Rust",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "test:watch": "pnpm -r test:watch",
    "test:coverage": "pnpm -r test:coverage",
    "lint": "biome check packages/*/src packages/*/tests",
    "format": "biome format --write packages/*/src packages/*/tests",
    "typecheck": "pnpm -r typecheck",
    "dev": "pnpm -r --parallel dev",
    "clean": "pnpm -r clean"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "packageManager": "pnpm@10.13.1",
  "devDependencies": {
    "@biomejs/biome": "^2.2.0",
    "@types/node": "^24.2.1",
    "@vitest/coverage-v8": "^3.2.4",
    "typescript": "^5.9.2",
    "vite": "^7.1.2",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "typescript",
    "rust",
    "result",
    "option",
    "error-handling",
    "functional",
    "monorepo"
  ],
  "author": "pavi2410",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rustify-ts/std-types.git"
  },
  "homepage": "https://github.com/rustify-ts/std-types",
  "bugs": {
    "url": "https://github.com/rustify-ts/std-types/issues"
  }
}